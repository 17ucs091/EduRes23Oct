<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/options"
    android:background="@drawable/images"
    tools:context=".FunctionActivity">

    <ImageButton
        android:id="@+id/notes"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignBottom="@+id/question_paper"
        android:layout_alignParentStart="true"
        android:layout_marginStart="59dp"
        android:background="@drawable/notes"
        android:onClick="note"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="42dp"
        android:layout_marginTop="205dp"
        android:text="CLASS NOTES"
        android:background="#45000000"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <ImageButton
        android:id="@+id/question_paper"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="57dp"
        android:background="@drawable/question"
        android:onClick="question"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="60dp"
        android:layout_marginTop="205dp"
        android:background="#45000000"
        android:text="QUESTION\n  PAPERS"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <ImageButton
        android:id="@+id/solutions"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/solution"
        android:layout_marginStart="59dp"
        android:layout_marginBottom="100dp"
        android:onClick="solution"/>

    <TextView
        android:id="@+id/sol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="58dp"
        android:layout_marginStart="56dp"
        android:text="SOLUTIONS"
        android:textColor="#ffffff"
        android:background="#45000000"
        android:textSize="20dp" />

    <ImageButton
        android:id="@+id/discussion_forum"
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/df"
        android:layout_marginBottom="100dp"
        android:layout_marginEnd="40dp"
        android:onClick="forum"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/question_paper"
        android:layout_alignTop="@+id/sol"
        android:background="#45000000"
        android:text="DISCUSSION\n    FORUM"
        android:textColor="#ffffff"
        android:textSize="20dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="19dp"
        android:layout_marginTop="20dp"
        android:text="SIGN OUT"
        android:onClick="signout"/>

</RelativeLayout>